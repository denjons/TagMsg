<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- requests -->
    <style name="request_list_item">
        <item name="android:paddingLeft">@dimen/tag_padding_Sides</item>
    </style>

    <!-- tags -->

    <style name="tag_list_element">
        <item name="android:background">@color/tag_list_background</item>
    </style>

    <style name="tag_list_element_selected">
        <item name="android:background">@color/tag_list_selected_background</item>
    </style>

    <style name="tag_list_text_selected" parent="tag_element_text">
        <item name="android:textColor">@color/tag_list_selected_text</item>
    </style>

    <style name="tag_element_text">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/tag_font_size</item>
        <item name="android:textColor">@color/tag_text_color</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/tag_text_padding_sides</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <!-- not tag list -->

    <style name="tag_element">
        <item name="android:paddingTop">@dimen/tag_padding_top</item>
        <item name="android:paddingBottom">@dimen/tag_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/tag_padding_Sides</item>
        <item name="android:paddingRight">@dimen/tag_padding_Sides</item>
        <item name="android:layout_margin">@dimen/tag_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tag_bucket">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
